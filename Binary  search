#include <iostream>
using namespace std;

intfindMissingBinary(intarr[], int n) {
int low = 0, high = n - 2; // n-1 elements in array

while (low <= high) {
int mid = (low + high) / 2;

if (arr[mid] == mid + 1) {
low = mid + 1;
        } else {
high = mid - 1;
        }
    }
return low + 1; // Missing number
}

int main() {
intarr[] = {1, 2, 3, 5, 6}; // Missing 4
int n = 6; // Range is 1 to 6

cout<< "Missing number (Binary Search): " <<findMissingBinary(arr, n) <<endl;

return 0;
}
