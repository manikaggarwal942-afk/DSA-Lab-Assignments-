#include <iostream>
#include <stack>
using namespace std;

class SpecialStack {
    stack<long long> s;
    long long minElement;

public:
    void push(long long x) {
        if (s.empty()) {
            s.push(x);
            minElement = x;
        } else if (x >= minElement) {
            s.push(x);
        } else {
            // Encode and update min
            s.push(2 * x - minElement);
            minElement = x;
        }
    }

    void pop() {
        if (s.empty()) {
            cout << "Stack is empty!\n";
            return;
        }

        long long top = s.top();
        s.pop();

        if (top < minElement) {
            // Retrieve previous minimum
            minElement = 2 * minElement - top;
        }
    }

    long long top() {
        if (s.empty()) {
            cout << "Stack is empty!\n";
            return -1;
        }

        long long top = s.top();
        return (top < minElement) ? minElement : top;
    }

    long long getMin() {
        if (s.empty()) {
            cout << "Stack is empty!\n";
            return -1;
        }
        return minElement;
    }

    bool isEmpty() {
        return s.empty();
    }
};

int main() {
    SpecialStack st;
    st.push(5);
    st.push(3);
    st.push(7);
    st.push(2);

    cout << "Current Min: " << st.getMin() << endl; // 2
    st.pop();
    cout << "Current Min after pop: " << st.getMin() << endl; // 3
    cout << "Top Element: " << st.top() << endl; // 7
    st.pop();
    cout << "Current Min: " << st.getMin() << endl; // 3
}
