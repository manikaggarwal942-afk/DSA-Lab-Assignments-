#include <iostream>
#include <stack>
using namespace std;

int main() {
    string str;
    cout << "Enter a string: ";
    cin >> str;   // input string (no spaces)

    stack<char> s;

    // Push all characters into stack
    for (char ch : str)
        s.push(ch);

    // Pop all characters from stack and build reversed string
    string reversed = "";
    while (!s.empty()) {
        reversed += s.top();
        s.pop();
    }

    cout << "Reversed string: " << reversed << endl;
    return 0;
}
