#include <iostream>
#include <stack>
#include <vector>
using namespace std;

void nearestSmallerToLeft(vector<int> &arr) {
    stack<int> s;
    vector<int> result;

    for (int i = 0; i < arr.size(); i++) {
        // Pop elements greater or equal to arr[i]
        while (!s.empty() && s.top() >= arr[i]) {
            s.pop();
        }

        // If stack becomes empty â†’ no smaller element
        if (s.empty())
            result.push_back(-1);
        else
            result.push_back(s.top());

        // Push current element for next iteration
        s.push(arr[i]);
    }

    // Display result
    cout << "Nearest smaller elements: ";
    for (int val : result)
        cout << val << " ";
    cout << endl;
}

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    vector<int> arr(n);
    cout << "Enter array elements: ";
    for (int i = 0; i < n; i++)
        cin >> arr[i];

    nearestSmallerToLeft(arr);

    return 0;
}
