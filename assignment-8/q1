    Node* root = nullptr;
    cout<<"enter the values:";
    for (int i = 0 ; i <n ;i++){
        int x;
        cin>>x;
        root = insertBST(root , x);
    }
    vector<int> out;
    
    
    // preorder(root , out);
    // cout<<"Pre order is :";
    // for (int i = 0 ; i<out.size(); i++){
    //     cout<< out[i]<<" ";
    // }
